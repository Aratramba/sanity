{
  "extends": "../../../tsconfig",
  "include": ["src"],
  "compilerOptions": {
    // todo: we need to disable noImplicitAny for as long as @sanity/base doesn't fully pass strict mode.
    "noImplicitAny": false,
    "outDir": "./lib",
    "jsx": "react",
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "customMatcher": "\\.css$"
        }
      }
    ]
  }
}
